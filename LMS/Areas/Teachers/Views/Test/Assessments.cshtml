@model IEnumerable<LMS.Domain.AssessmentType>

@{
    ViewData["Title"] = "Assessments";
    Layout = "~/Areas/Teachers/Views/Shared/_TeacherLayout.cshtml";
}

<div class="panel-header panel-header-sm">
</div>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">

                <div class="container-fluid">
                    <div class="table-responsive">
                        <div class="table-wrapper">
                            <div class="table-title">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h2><b>Manage Assessment Type</b></h2>
                                    </div>
                                    <div class="col-md-6 pull-right">
                                        <a href="#addAssessmentModal" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add Assessment Type</span></a>

                                    </div>
                                </div>
                            </div>

                            <table id="AssessmentPage" class="display" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Assessment Type Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Assessment_Type_Id</td>
                                            <td>@item.Assessment_Type_Name</td>
                                            <td>
                                                <a href="#editAssessmentModal" class="edit" id="edit" data-toggle="modal">
                                                    <i class="material-icons" data-toggle="tooltip" title="" data-original-title="Edit"></i>
                                                </a>

                                                <a href="#deleteAssessmentModal" class="delete" id="delete" data-toggle="modal">
                                                    <i class="material-icons" data-toggle="tooltip" title="" data-original-title="Delete"></i>
                                                </a>

                                                @*Added BY Absar To get parentid*@
                                                <input type="hidden" class="Assessment_Type_Id" value="@item.Assessment_Type_Id" />

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="clearfix">

                            </div>
                        </div>
                    </div>
                    <!-- Add Modal HTML -->
                    <div id="addAssessmentModal" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form method="post" asp-controller="test" asp-action="addAssessmentType">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Add Assessment Type</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    </div>
                                    <div class="modal-body">
                                        
                                        <div class="form-group">
                                            <label>Assessment Type Name</label>
                                            <input type="text" class="form-control" required="" name="Assessment_Type_Name">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                        <input type="submit" class="btn btn-success" value="Add">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>


                    <!-- Edit Modal HTML -->
                    <div id="editAssessmentModal" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form method="post" asp-controller="test" asp-action="editAssessmentType">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Edit Assessment Type</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">
                                            <label>ID</label>
                                            <input type="text" class="form-control" required="" id="Assessment_Type_Id" disabled="disabled">
                                        </div>
                                        <div class="form-group">
                                            <label>Assessment Type Name</label>
                                            <input type="text" class="form-control" required="" name="Assessment_Type_Name" id="Assessment_Type_Name">
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                        <input type="submit" class="btn btn-info" value="Update">
                                        @*Added By Absar*@
                                        <input type="hidden" name="Assessment_Type_Id" id="Assessment_Type_Id" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>


                    <!-- Delete Modal HTML -->
                    <div id="deleteAssessmentModal" class="modal fade">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form method="post" asp-controller="test" asp-action="DeleteAssessmentType">
                                    <div class="modal-header">
                                        <h4 class="modal-title">Delete Assessment Type</h4>
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete these Records?</p>
                                        <p class="text-warning"><small>This action cannot be undone.</small></p>
                                    </div>
                                    <div class="modal-footer">
                                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                        <input type="submit" class="btn btn-danger" value="Delete">

                                        @*//Added By Absar To Pass Parameter to action method*@
                                        <input type="hidden" id="Assessment_Type_Id" name="Assessment_Type_Id" />

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>




    <footer class="footer">
        <div class=" container-fluid ">
            <nav>
                <ul>
                    <li>
                        <a href="https://www.creative-tim.com">
                            Karachi Grammar School
                        </a>
                    </li>
                    <li>
                        <a href="http://presentation.creative-tim.com">
                            About Us
                        </a>
                    </li>
                    <li>
                        <a href="http://blog.creative-tim.com">
                            Blog
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="copyright" id="copyright">
                &copy;
                <script>
                        document.getElementById('copyright').appendChild(document.createTextNode(new Date().getFullYear()))
                </script>, Designed by <a href="https://www.invisionapp.com" target="_blank">Invision</a>. Coded by <a href="https://www.creative-tim.com" target="_blank">Creative Tim</a>.
            </div>
        </div>
    </footer>
</div>


<!--   Core JS Files   -->
<script src="~/Dashboard/assets/jqueryDataTable/jquery.min.js"></script>
<script src="~/Dashboard/assets/jqueryDataTable/jquery.dataTables.js"></script>
<link href="~/Dashboard/assets/js/toastr/toastr.css" rel="stylesheet" />
<script src="~/Dashboard/assets/js/toastr/toastr.js"></script>
@*<script src="~/Dashboard/assets/js/navigation.js"></script>*@
<script>
    $(document).ready(function () {

        toastr.options = {
            "positionClass": "toast-top-center",
            "showDuration": "5000",
            "hideDuration": "5000",
            "timeOut": "5000",
            "extendedTimeOut": "5000",
        };



        var messageError = '@(ViewBag.Error)';
        var messageSuccess = '@(ViewBag.Success)';


        if (messageSuccess.length > 0) {

            toastr.success(messageSuccess);
        }
        else if (messageError.length > 0)  {
            toastr.error(messageError);
        }



        // Activate tooltip
        $('[data-toggle="tooltip"]').tooltip();


        //Get Assessment_Id for Delete Added By Absar
        $('#AssessmentPage #delete').on('click', function () {
            var Assessment_Type_Id = $(this).parent().find('.Assessment_Type_Id').val();

            $('#deleteAssessmentModal #Assessment_Type_Id').val(Assessment_Type_Id);
        });



        $('#AssessmentPage #edit').on('click', function () {


            var id = $(this).parent().find('.Assessment_Type_Id').val();
            $.ajax({

                type: 'GET',
                url: '/teachers/test/editAssessmentType/' + id,
                success: function (objAssessment) {
                    
                    $('#editAssessmentModal #Assessment_Type_Id').val(objAssessment.assessment_Type_Id);
                    $('#editAssessmentModal #Assessment_Type_Name').val(objAssessment.assessment_Type_Name);

                }
            });
        });



        $('#AssessmentPage').DataTable({
            /* Disable initial sort */
           // "aaSorting": []
        });




    });
</script>