@model LMS.Domain.ViewModels.EditLectureViewModel
@{
    ViewData["Title"] = "EditLecture";
    Layout = "~/Areas/Teachers/Views/Shared/_TeacherLayout.cshtml";
}


    
<div class="panel-header panel-header-sm">
</div>

<div class="content">
        <div class="row">
            <div class="col-md-12 ">
                <div class="card">
                    <div class="card-header">
                        <h5 class="title">Lesson Update</h5>
                    </div>
                    <div class="card-body">
                        <form enctype="multipart/form-data" asp-controller="Lecture" asp-action="EditLecture">

                            <div class="row">
                                <div class="col-md-4 pr-1">
                                    <div class="form-group">
                                        <label>Class Name</label>
                                        <select id="ddlClass" asp-for="Class_Id" class="form-control" asp-items="@ViewBag.ClassList"></select>
                                        
                                    </div>

                                </div>
                                <div class="col-md-4 pr-1">
                                    <div class="form-group">
                                        <label>Section Name</label>
                                        <select id="ddlSection" asp-for="Section_Id" class="form-control" asp-items="@ViewBag.SectionList"></select>
                                    </div>
                                </div>
                                <div class="col-md-4 pr-1">
                                    <div class="form-group">
                                        <label>Subject Name</label>
                                        <select id="ddlSubject" asp-for="Subject_Id" class="form-control" asp-items="@ViewBag.SubjectList"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label>Date</label>
                                        <input asp-for="LecturePost_Date" type="date" class="form-control">
                                        @*<input class="form-control" type="datetime-local" id="birthdaytime" name="birthdaytime">*@
                                    </div>
                                </div>
                                <div class="col-md-6 pl-1">
                                    <div class="form-group">
                                        <label>Lecture Name</label>
                                        <input asp-for="Lecture_Name" autocomplete="off" class="form-control" placeholder="Lecture Name">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Details</label>
                                        <input asp-for="Lecture_Detail" autocomplete="off" class="form-control" placeholder="Lecture Details">
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-6 pr-1">
                                    <div class="form-group">
                                        <label>Lecture File</label>
                                        <br />
                                        <input asp-for="Lecture_File" style="line-height: normal; opacity: 1; height: 28px; width: 70%; border: 1px solid; margin-top: 30px; font-size: 1.3em;" />
                                        <br /><br />
                                        <a asp-controller="teachers/Lecture" asp-action="downloadLecture" asp-route-lectureId="@Model.Id" class="delete">
                                        <i class="fas fa-file-archive"></i> 
                                        <label>@Model.ExistingFilePath</label>
                                        </a>
                                    </div>
                                </div>
                            </div>



                            @*<div class="row">
                                <div class="col-md-4 pr-1">
                                    <div class="form-group">
                                        <label>File Upload</label>
                                        <input asp-for="Lecture_File" class="form-control">
                                    </div>
                                </div>
                            </div>*@


                            <input asp-for="ExistingFilePath" type="hidden" value="@Model.ExistingFilePath" />
                            <button type="submit" class="btn btn-primary">Update</button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



