</div>







<!--   Core JS Files   -->
<script src="~/Dashboard/assets/jqueryDataTable/jquery.min.js"></script>
<script src="~/Dashboard/assets/jqueryDataTable/jquery.dataTables.js"></script>
<link href="~/Dashboard/assets/js/toastr/toastr.css" rel="stylesheet" />
<script src="~/Dashboard/assets/js/toastr/toastr.js"></script>

<script>
    $(document).ready(function () {

        toastr.options = {
            "positionClass": "toast-top-center",
            "showDuration": "5000",
            "hideDuration": "5000",
            "timeOut": "5000",
            "extendedTimeOut": "5000",
        };



        var messageError = '@(ViewBag.Error)';
        var messageSuccess = '@(ViewBag.Success)';
        

        if (messageSuccess.length > 0) {
            
            toastr.success(messageSuccess);
        }
        else if (messageError.length > 0)  {
            toastr.error(messageError);
        }

        
        // Activate tooltip
        $('[data-toggle="tooltip"]').tooltip();


        //Check If Mandatory Fields are Filled Or Not
        $("#addForm").submit(function (event) {

          

            var TeacherName = $('#Teacher_Name').val();
            var TeacherCnic = $('#Teacher_Cnic').val();
            var TeacherEmail = $('#Teacher_Email').val();
            var TeacherMobNumber = $('#Teacher_MobNumber').val();
            var TeacherDesignation = $('#Teacher_Designation').val();
            var TeacherDepartment = $('#Teacher_Department').val();

           

            //Regex for Valid Characters i.e. Alphabets and Numbers.
            var letters = /^[a-zA-Z ]+$/;
            var cnic = /^[0-9-]+$/;
            var email = /^(([^<>()[\]\\.,;:\s@@"]+(\.[^<>()[\]\\.,;:\s@@"]+)*)|(".+"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/

            if (TeacherName.length < 0 || !(TeacherName.match(letters))) {

                event.preventDefault();
                toastr.error("Cannot Insert Numeric And Special Characters Into Name");

            }
            if (TeacherCnic.length < 0 || !(TeacherCnic.match(cnic))) {

                event.preventDefault();
                toastr.error("Cannot Insert Alphabet And Special Characters Into Cnic");

            }
            if (TeacherEmail.length < 0 || !(TeacherEmail.match(email))) {

                event.preventDefault();
                toastr.error("Incorrect Email Format");

            }
            if (TeacherMobNumber.length < 0 || !(TeacherMobNumber.match(cnic))) {

                event.preventDefault();
                toastr.error("Cannot Insert Alphabet And Special Characters Into MibileNumber");

            }
            if (TeacherDesignation.length < 0 || !(TeacherDesignation.match(letters))) {

                event.preventDefault();
                toastr.error("Cannot Insert Numeric And Special Characters Into Designation");

            }
            if (TeacherDepartment.length < 0 || !(TeacherDepartment.match(letters))) {

                event.preventDefault();
                toastr.error("Cannot Insert Numeric And Special Characters Into Department");

            }

        });


    });




    //function to show imae in div after browse
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#teacher_image')
                    .attr('src', e.target.result)
                // .width(150)
                // .height(170)
            };

            reader.readAsDataURL(input.files[0]);
        }
    }


</script>