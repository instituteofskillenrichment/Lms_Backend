@model LMS.Domain.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Login - LMS</title>
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="~/Dashboard/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Dashboard/assets/css/bootstrap2.min.css">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" type="text/css" href="~/Dashboard/assets/css/all.css">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/Dashboard/assets/css/styles.css">

</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Sign In</h3>

                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input asp-for="UserName" required class="form-control" placeholder="username" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="Password" required class="form-control" placeholder="password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="row align-items-center remember">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
                <div class="card-footer">

                    <div class="d-flex justify-content-center forget-password">
                        <a href="#">Forgot your password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Dashboard/assets/js/core/jquery.min.js"></script>
    <script src="~/Dashboard/assets/js/core/bootstrap.min.js"></script>


</body>
</html>

